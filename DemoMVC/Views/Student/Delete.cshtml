@model DemoMVC.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h3>Bạn muốn xóa thông tin Sinh viên?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentName):
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentName)
